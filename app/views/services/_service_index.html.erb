<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col text-center w-full mb-20">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">All the services</h1>
        <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Wathever you need, we are sure you will find here!</p>
      </div>
      <div class="flex flex-wrap -m-2">
      <% @services.each do |service|%>
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
            <%= image_tag(service.image, :class => "w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4") %>
            <div class="flex-grow">
              <h2 class="text-gray-900 title-font font-medium"><%= service.name %></h2>
              <% service.categories.each do |category| %>
                <% if category == service.categories.last %>
                  <span class="text-gray-500"> <%= category.name %> </span>
                <% else %>
                  <span class="text-gray-500"> <%= category.name %> | </span>
                <% end %>
              <% end %>
              <p class="text-gray-900 newline"> <%= service_description(service.description) %> </p>
              <%= link_to "See more...", service_path(service) %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="apple_pagination">
      <%= will_paginate @services, :container => false %>
    </div>
  </section>


  
