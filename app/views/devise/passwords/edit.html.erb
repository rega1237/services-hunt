<div class="flex justify-center items-center w-full h-screen px-2 sm:px-0">
<div class="flex flex-1 flex-col items-center justify-center px-10 relative">
  <div class="flex lg:hidden justify-between items-center w-full py-4">
    <div class="flex items-center justify-start space-x-3">
      <%= link_to root_path do%>
        <%= image_tag "logo_wb.png", size:"100x100" %>
      <% end %>
    </div>
    <div class="flex items-center space-x-2">
      <span>Not a member? </span>
        <%= link_to "Sign up now",  new_user_registration_path, class: "underline font-medium text-[#070eff]" %>
    </div>
  </div>
        
      <!-- Login box -->
  <div class="flex flex-1 flex-col  justify-center space-y-5 max-w-md">
    <div class="flex flex-col space-y-2 text-center">
      <h2 class="text-3xl md:text-4xl font-bold">Forget your password?</h2>
      <p class="text-md md:text-xl">Change your password and enjoy!</p>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="flex flex-col max-w-md space-y-5">
        <%= f.password_field :password, placeholder: "Enter new password", autofocus: true, autocomplete: "new-password", class: "flex px-3 py-2 md:px-4 md:py-3 border-2 border-black rounded-lg font-medium placeholder:font-normal" %> 
        <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "new-password", class: "flex px-3 py-2 md:px-4 md:py-3 border-2 border-black rounded-lg font-medium placeholder:font-normal" %>
        <%= f.submit "Change password", class: "flex items-center justify-center flex-none px-3 py-2 md:px-4 md:py-3 border-2 rounded-lg font-medium border-black bg-black text-white hover:cursor-pointer" %>
        <div class="flex justify-center items-center">
          <span class="w-full border border-black"></span>
          <span class="px-4">Or</span>
          <span class="w-full border border-black"></span>
        </div>
      </div>  
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>