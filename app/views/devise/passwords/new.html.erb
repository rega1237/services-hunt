<div class="flex min-h-screen">

  <!-- Container -->
  <div class="flex flex-row w-full">
   
    <!-- Sidebar -->
    <div class='hidden lg:flex flex-col justify-between bg-gradient-to-r from-[#F5F7FA] to-[#B8C6DB] lg:p-8 xl:p-12 lg:max-w-sm xl:max-w-lg'>
      <div class="flex items-center justify-start space-x-3">
        <%= link_to root_path do%>
          <%= image_tag "logo_wb.png", size:"130x100" %>
        <% end %>
      </div>
      <div class='space-y-5'>
        <h1 class="lg:text-3xl xl:text-4xl xl:leading-snug font-extrabold">
          Enter your account share your services and find the best service for you
        </h1>
        <p class="text-lg">You do not have an account?</p>
        <%= link_to "Create account here",  new_user_registration_path, class: "inline-block flex-none px-4 py-3 border-2 rounded-lg font-medium border-black bg-black text-white" %>
      </div>
      <p class="font-medium">Â© 2022 Rafael Guzman </p>
    </div>

      <!-- Login -->
    <div class="flex flex-1 flex-col items-center justify-center px-10 relative">
      <div class="flex lg:hidden justify-between items-center w-full py-4">
        <div class="flex items-center justify-start space-x-3">
          <%= link_to root_path do%>
            <%= image_tag "logo_wb.png", size:"100x100" %>
          <% end %>
        </div>
        <div class="flex items-center space-x-2">
          <span>Not a member? </span>
          <%= link_to "Sign up now",  new_user_registration_path, class: "underline font-medium text-[#070eff]" %>
        </div>
      </div>
        
      <!-- Login box -->
      <div class="flex flex-1 flex-col  justify-center space-y-5 max-w-md">
        <div class="flex flex-col space-y-2 text-center">
          <h2 class="text-3xl md:text-4xl font-bold">Forget your password?</h2>
          <p class="text-md md:text-xl">No problem write your email and we will send you a email to change it!</p>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="flex flex-col max-w-md space-y-5">
            <%= f.email_field :email, placeholder: "Enter email", autofocus: true, autocomplete: "email", class: "flex px-3 py-2 md:px-4 md:py-3 border-2 border-black rounded-lg font-medium placeholder:font-normal" %> 
            <%= f.submit "Send me reset password instructions", class: "flex items-center justify-center flex-none px-3 py-2 md:px-4 md:py-3 border-2 rounded-lg font-medium border-black bg-black text-white hover:cursor-pointer" %>
            <div class="flex justify-center items-center">
              <span class="w-full border border-black"></span>
              <span class="px-4">Or</span>
              <span class="w-full border border-black"></span>
            </div>
          </div>  
        <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>