<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Find all the categories</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-xl">All the categories of all services, look around we are sure you will find what are you looking for.</p>
    </div>
    <div class="flex flex-wrap -m-4">
      <% @categories.each do |category|%>
        <div class="lg:w-1/3 w-1/2 p-4">
          <%= link_to category_path(category.slug) do %>
            <div class="flex relative">
              <%= image_tag(category.image, :class => "absolute inset-0 w-full h-full object-cover object-center") %>
              <div class="px-8 py-[4rem] relative z-10 w-full border-4 border-gray-200 bg-white opacity-0 text-center hover:opacity-80">
                <h1 class="title-font text-lg font-bold text-[#5391ed]"><%= category.name %></h1>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>